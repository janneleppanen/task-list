type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  projects: [Project!]! @relation(name: "UserOnProject", onDelete: CASCADE )
  updatedAt: DateTime!
  createdAt: DateTime!
}

type Project {
  id: ID! @unique
  name: String!
  user: User! @relation(name: "UserOnProject", onDelete: SET_NULL)
  tasks: [Task!]! @relation(name: "ProjectOnTask", onDelete: CASCADE)
  updatedAt: DateTime!
  createdAt: DateTime!
}

type Task {
  id: ID! @unique
  project: Project! @relation(name: "ProjectOnTask", onDelete: SET_NULL)
  done: Boolean! @default(value: "false")
  description: String!
  updatedAt: DateTime!
  createdAt: DateTime!
}
